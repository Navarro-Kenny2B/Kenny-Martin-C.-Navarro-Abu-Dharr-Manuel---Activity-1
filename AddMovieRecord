    private void submitRecordActionPerformed(java.awt.event.ActionEvent evt) {                                             

        if(txtTitle.getText().equals("")||txtDirector.getText().equals("")){

            JOptionPane.showMessageDialog(this,"Please Provide A Movie Title and Director!");

        }else{

            MovieManagement.AddRowToJTable(new Object[]{

                txtTitle.getText(),
                txtYear.getText(),
                txtGenre.getText(),
                txtDirector.getText(),
                txtDirectorBday.getText(),
                txtActors.getText(),
                txtActorsBday.getText()

            });

            dispose();

            txtTitle.setText("");
            txtYear.setText("");
            txtGenre.setText("");
            txtDirector.setText("");
            txtActors.setText("");
            txtActorsBday.setText("");
            txtDirectorBday.setText("");

            JOptionPane.showMessageDialog(this,"Movie Record Successfully Added");

        }

    }                                            

